<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.android.pets_finder.registration.RegistrationFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_registration">

        <action
            android:id="@+id/action_registrationFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registrationFragment_to_advertisementListContainerFragment"
            app:destination="@id/advertisementListContainerFragment"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.android.pets_finder.login.LoginFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_advertisementListContainerFragment"
            app:destination="@id/advertisementListContainerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/createAdFragment"
        android:name="com.example.android.pets_finder.createadvertisement.CreateAdvertisementFragment"
        android:label="fragment_create_ad"
        tools:layout="@layout/fragment_create_ad" >
        <action
            android:id="@+id/action_createAdFragment_to_advertisementListContainerFragment"
            app:destination="@id/advertisementListContainerFragment"
            app:popUpTo="@id/createAdFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_createAdFragment_to_advertisementListContainerFragment2"
            app:destination="@id/advertisementListContainerFragment"
            app:popUpTo="@id/createAdFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_createAdFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_createAdFragment_to_advertisementAddressFragment"
            app:destination="@id/advertisementAddressFragment" />
        <argument
            android:name="advertisementData"
            app:argType="com.example.android.pets_finder.utils.ParcelizeAdvertisementModel"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/advertisementListContainerFragment"
        android:name="com.example.android.pets_finder.advertisementlistcontainer.AdvertisementListContainerFragment"
        android:label="AdvertisementListContainerFragment" >
        <action
            android:id="@+id/action_advertisementListContainerFragment_to_createAdFragment"
            app:destination="@id/createAdFragment" />
        <action
            android:id="@+id/action_advertisementListContainerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_advertisementListContainerFragment_to_advertisementDetailsFragment"
            app:destination="@id/advertisementDetailsFragment" />
        <action
            android:id="@+id/action_advertisementListContainerFragment_to_advertisementsMapFragment"
            app:destination="@id/advertisementsMapFragment" />
    </fragment>
    <fragment
        android:id="@+id/advertisementDetailsFragment"
        android:name="com.example.android.pets_finder.advertisementdetails.AdvertisementDetailsFragment"
        android:label="fragment_advertisement_details"
        tools:layout="@layout/fragment_advertisement_details" >
        <action
            android:id="@+id/action_advertisementDetailsFragment_to_advertisementListContainerFragment"
            app:destination="@id/advertisementListContainerFragment"
            app:popUpTo="@id/advertisementListContainerFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="advertisementData"
            app:argType="com.example.android.pets_finder.utils.ParcelizeAdvertisementModel" />
        <action
            android:id="@+id/action_advertisementDetailsFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/advertisementAddressFragment"
        android:name="com.example.android.pets_finder.advertisementaddress.AdvertisementAddressFragment"
        android:label="fragment_advertisement_address"
        tools:layout="@layout/fragment_advertisement_address" >
        <action
            android:id="@+id/action_advertisementAddressFragment_to_createAdFragment"
            app:destination="@id/createAdFragment"
            app:popUpTo="@id/createAdFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="advertisementData"
            app:argType="com.example.android.pets_finder.utils.ParcelizeAdvertisementModel"
            app:nullable="true"
            android:defaultValue="@null" />
        <action
            android:id="@+id/action_advertisementAddressFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/advertisementsMapFragment"
        android:name="com.example.android.pets_finder.advertisementsmap.AdvertisementsMapFragment"
        android:label="fragment_advertisements_map"
        tools:layout="@layout/fragment_advertisements_map" >
        <action
            android:id="@+id/action_advertisementsMapFragment_to_advertisementDetailsFragment"
            app:destination="@id/advertisementDetailsFragment" />
        <action
            android:id="@+id/action_advertisementsMapFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>
