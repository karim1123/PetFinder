<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/createAdFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cbMissingPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/missing" />

        <CheckBox
            android:id="@+id/cbFoundPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cbMissingPet"
            android:text="@string/found_pet" />

        <CheckBox
            android:id="@+id/cbHomelessPet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cbFoundPet"
            android:text="@string/homeless" />

        <CheckBox
            android:id="@+id/cbCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbMissingPet"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/cat" />

        <CheckBox
            android:id="@+id/cbDog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbMissingPet"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/cbCat"
            android:text="@string/dog" />

        <TextView
            android:id="@+id/etAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cbCat"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="address"
            android:ems="10"
            android:hint="@string/address"
            android:minHeight="48dp"
            android:paddingStart="5dp"
            android:textColorHint="#757575"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etAddress"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:autofillHints="description"
            android:ems="10"
            android:hint="@string/description"
            android:imeOptions="actionDone"
            android:inputType="textLongMessage"
            android:textColorHint="#757575"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imagesRecycler"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/etDescription"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:scrollbars="horizontal"
            android:visibility="gone"
            app:layoutManager="LinearLayoutManager" />

        <Button
            android:id="@+id/btnSelectImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagesRecycler"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="@string/select_images" />

        <Button
            android:id="@+id/btnSelectAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSelectImages"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:text="@string/select_address" />

        <Button
            android:id="@+id/btnSaveAd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnSelectAddress"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:text="@string/save" />
    </RelativeLayout>

</ScrollView>
